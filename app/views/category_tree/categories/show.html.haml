%dl
  %dt Code:
  %dd
    = @category.code
%dl
  %dt Name:
  %dd
    = @category.name

%dl
  %dt Full Icon:
  %dd
    = image_tag @category.icon.full.url

%dl
  %dt Small Icon:
  %dd
    = image_tag @category.icon.thumb.url

-if @category.parent
  %dl
    %dt Parent:
    %dd
      = link_to @category.parent.name, category_path(@category.parent)

- if @category.has_children?
  %dl
    %dt Children:
    %dd
      = render :partial => 'table', :locals => {:categories => @category.children}

= link_to 'Edit', edit_category_path(@category)
\|
= link_to 'Back', @category.parent ? category_path(@category.parent) : categories_path
